<h1>Cadastrar um Novo Imóvel</h1>

<%= form_for @property do |f| %>
  <div>
    <%= f.label :title, 'Título' %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :property_location, 'Local' %>
    <%= f.text_field :property_location %>
  </div>
  <div>
    <%= f.label :area, 'Tamanho' %>
    <%= f.text_field :area %>
  </div>
  <div>
    <%= f.label :property_type, 'Tipo do Imóvel' %>
    <%= f.text_field :property_type %>
  </div>
  <div>
    <%= f.label :rooms, 'Quantidade de quartos' %>
    <%= f.text_field :rooms %>
  </div>
  <div>
    <%= f.label :maximum_guests, 'Máximo de pessoas' %>
    <%= f.text_field :maximum_guests %>
  </div>
  <div>
    <%= f.label :maximum_rent, 'Máximo de dias para locação' %>
    <%= f.text_field :maximum_rent %>
  </div>
  <div>
    <%= f.label :minimum_rent, 'Mínimo de dias para locação' %>
    <%= f.text_field :minimum_rent %>
  </div>
  <div>
    <%= f.label :daily_rate, 'Valor padrão da diária' %>
    <%= f.text_field :daily_rate %>
  </div>
  <div>
    <%= f.label :photo, 'Foto' %>
    <%= f.text_field :photo %>
  </div>
  <div>
    <%= f.label :description, 'Descrição' %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :usage_rules, 'Regras de uso' %>
    <%= f.text_area :usage_rules %>
  </div>
  <%= f.submit 'Enviar' %>
  
<% end %>
